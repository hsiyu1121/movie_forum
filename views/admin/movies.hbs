<h1>電影後台</h1>

<a href="/admin/movies">電影清單</a> ||
<a href="/admin/create">新增電影</a>

<br>
<br>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">title</th>
      <th scope="col">category</th>
      <th scope="col">release</th>
      <th scope="col">#</th>
    </tr>
  </thead> 
  <tbody>
    {{#each movies.rows}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.title}}</td>
      <td>{{this.Category.name}}</td>
      <td>{{this.release_date}}</td>
      <td>
        <a href="/admin/movies/{{this.id}}" class="btn btn-link">Show</a>
        <a href="/admin/movies/{{this.id}}/edit" class="btn btn-link">Edit</a>
        <form action="/admin/movies/{{this.id}}?_method=DELETE" method="POST" style="display:inline;">
          <button type="submit" class="btn btn-link">Delete</button>
        </form>
        
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>